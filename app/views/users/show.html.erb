<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Option</p>
<%= f.text_area :body %>

<br><%= f.submit "Create Book" %></br>

<% end %>

<h2>Books</h2>

<tr>
  <th></th>
  <th>Title</th>
  <th>Option</th>
</tr>

<% @books.each do |book| %>

<tr>
<td><%= link_to book.title, book_path(book.id) %></td>

<td><%= book.body %></td>
</tr>
<% end %>
