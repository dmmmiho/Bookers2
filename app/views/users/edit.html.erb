<h1>User info</h1>

<%= form_with model: @user do |f| %>

<br><label for="inputName">Name</label></br>
<br><%= f.text_field :name  %></br>

<br><label for="inputImage">Image</label></br>
<br><%= f.file_field :profile_image  %></br>

<br><label for="introduction">Introduction</label></br>
<br><%= f.text_area :introduction  %></br>

<br><%= f.submit "Update User" %></br>
<% end %>