<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Option</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>
<% end %>

<h2>Books</h2>
    
<% @books.each do |book| %>


<p>Title</p>
<span><%= book.title %></span>

<p>Option</p>
<span><%= book.body %></span>

</div>
<% end %>