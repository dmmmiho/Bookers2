<div class="container">
<div class="row">
    
<% if @book.errors %>
<ul>
    <% @book.errors.fill_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<div class="col-sm-3">
<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :full, 100, 100, fallback: "no_image.jpg", format: 'no_image.jpg' %>

<h5>name</h5>
<%= @user.name %>

<h5>introduction</h5>
<%= @user.introduction %>

<br><%= link_to "", edit_user_path(current_user), "col-sm-12 btn btn-default glyphicon glyphicon-wrench" %></br>
</div>


<div class="col-sm-3">
<h2>New book</h2>

<%= form_with model: @book, url: 'book_path(@book)', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "col-sm-12" %>

<h4>Option</h4>
<%= f.text_area :body, class: "col-sm-12" %>

<br><%= f.submit 'Create Book', class: "col-sm-12 btn btn-primary" %></br>
<% end %>
</div>


<div class= "col-sm-9" >
<h2>Books</h2>

<table class='table table-hover table-inverse'>
    
    <tr>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
    </tr>
    
<% @books.each do |book| %>

<tr>
    <td><%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20 fallback: "no_image.jpg", size: '20x20', format: 'no_image.jpg' %></td>
<% end %>

<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= link_to book.body %></td>
</tr>
<% end %>
</table>
</div>
</div>
</div>