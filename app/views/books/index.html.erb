<h1>User info</h1>

<%= image_tag @user.get_profile_image %>

<%= @user.name %>

<%= @user.introduction %>

<%= link_to "プロフィール編集", edit_user_path(@user) %>

<% end %>



<h1>New book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Option</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>
<% end %>

<h1>Books</h1>
    
<% @books.each do |book| %>

<%= image_tag @user.get_profile_image %>

<p><%= book.title %></p>

<p><%= book.body %></p>

</div>
<% end %>